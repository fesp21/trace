# -*- coding: utf-8 -*-
from flask import Flask
from config import DevelopmentConfig
from sqlalchemy import create_engine,MetaData
from flask_sqlalchemy import SQLAlchemy
from flask_bootstrap import Bootstrap
from flask_login import LoginManager
from flask_mail import Mail
from flask_moment import Moment
from flask_wtf import CSRFProtect
from .login_config import Anonymous
from flask_kvsession import KVSessionExtension
from simplekv.db.sql import SQLAlchemyStore



app = Flask(__name__)
app.config.from_object(DevelopmentConfig)

db = SQLAlchemy(app)
moment = Moment(app)
bootstrap = Bootstrap(app)
login_manager = LoginManager(app)
mail = Mail(app)
csrf = CSRFProtect(app)
login_manager.login_view = 'login'
login_manager.anonymous_user = Anonymous
login_manager.session_protection = 'strong'  # session protection to help prevent your usersâ€™ sessions from being stolen.

engine = create_engine('mysql+pymysql://root:db_password@localhost/kvsession_db')
metadata = MetaData(bind=engine)
store = SQLAlchemyStore(engine, metadata, 'kvsession_table')
metadata.create_all()
kvsession_extension = KVSessionExtension(store, app)

import views
import models
